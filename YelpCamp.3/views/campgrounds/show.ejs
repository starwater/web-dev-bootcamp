<% include ../partials/header %>
<style>
    body {
        min-height: 75rem;
        padding-top: 4.5rem;
        color:purple;
}
</style>
<div class="container">
    <h1><%= campground.name %></h1>


    <img src="<%=campground.image%>">

    <p> <%= campground.description%> </p>
    
    <p><a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/comments/new">Add new comment</a></p>
    
    <!--comments forloop-->
    <% campground.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author%></strong> - <%= comment.text%>
    </p>
    <% }) %>
<!--comtainer div end-->
</div>

<% include ../partials/footer %>