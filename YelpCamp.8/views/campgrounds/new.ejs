<% include ../partials/header %>

<div class="container">
    <h1  class="text-center">Create a new campground</h1>
    <div style="width:30%; margin: 25px auto">
        <!--form-group for form spacing-->
            <form action="/campgrounds" method="POST">
                <div class="form-group">  
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                 <div class="form-group">  
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">  
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">  
                    <button href="/" class="btn btn-primary btn-block" name="submit">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a> 
       </div>
    </div>
       
</div>


