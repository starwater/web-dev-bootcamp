<% include ../partials/header %>

<!--side bar container-->
<div class= "container">
    <div class="row">
        <div class="col-md-3">
            <P class="lead">YelpCamp</P>
            <div class="list-group">
                <li class="list-group-item active">info1</li>
                <li class="list-group-item">info2</li>
                <li class="list-group-item">info3</li>
            </div>
        </div>
        <!--end of side bar-->
        
        <!--main content-->
        <div class="col-md-9">
                    <div class="img-thumbnail">
                    <img class="img-responsive" src="<%=campground.image%>">
                    <div class="caption-full">
                        <h4 class="float-right">$9.00/night</h4>
                        <!--this should be a link to the actual campground-->
                        <h4><a href="http://www.google.ca"><%= campground.name %></a></h4>   
                    </div>
                    <p> <%= campground.description%> </p>
                    </div>
                    <!--end of thumbnail-->
                    <!--comment frame-->
                    <div class="card card-body bg-light">
                        <div class="text-right">
                            <p><a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/comments/new">Add new comment</a></p>
                            <hr>
                        </div>
                        <!--end of comment button-->
                            <!--comment for loop-->
                            <% campground.comments.forEach(function(comment){ %>
                            <div class="row">
                                <div class="col-md-12">
                                        <%= comment.text%> 
                                        <span class="float-right"><%= document.getElementById("demo").innerHTML = (new Date()).toUTCString() %></span><br/>
                                    -<strong><%= comment.author.username%></strong>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <!--end of comment-->
        </div>
        <!--end of main content-->
    </div>
</div>

<% include ../partials/footer %>